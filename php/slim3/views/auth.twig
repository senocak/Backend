{% extends "app.twig" %}
{% block content %}
    <div class="col-xs-6">
        <form method="POST" action="{{ path_for('auth.postKayıt') }}" autocomplete="off">
            <div class="form-group {{ errors.name ? 'has-error' : '' }}">
                <label for="exampleInputEmail1">İsminiz</label>
                <input type="text" class="form-control" name="name" id="exampleInputEmail1" placeholder="İsminiz" value={{ old.name ? old.name : ''}}>
                {% if errors.name %}
                    <span class="help-block">{{ errors.name | first }}</span>
                {% endif %}
            </div>
            <div class="form-group {{ errors.email ? 'has-error' : '' }}">
                <label for="exampleInputEmail1">Email Adresiniz.</label>
                <input type="email" class="form-control" name="email" id="exampleInputEmail1"  placeholder="Email Adresiniz." value={{ old.email ? old.email : ''}}>
                <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                {% if errors.email %}
                    <span class="help-block">{{ errors.email | first }}</span>
                {% endif %}
            </div>
            <div class="form-group {{ errors.password ? 'has-error' : '' }}">
                <label for="exampleInputPassword1">Şifre</label>
                <input type="password" name="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
                {% if errors.password %}
                    <span class="help-block">{{ errors.password | first }}</span>
                {% endif %}
            </div>
            <button type="submit" class="btn btn-primary btn-block">Kayıt Ol</button>
            {{csrf.field | raw }}
        </form>
    </div>
    <div class="col-xs-6">
        <form method="POST" action="{{ path_for('auth.postGiris') }}" autocomplete="off">
            <div class="form-group {{ errors.email_login ? 'has-error' : '' }}">
                <label for="exampleInputEmail1">Email Adresiniz.</label>
                <input type="email" class="form-control" name="email_login" id="exampleInputEmail1"  placeholder="Email Adresiniz." value={{ old.email_login ? old.email_login : ''}}>
                <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                {% if errors.email_login %}
                    <span class="help-block">{{ errors.email_login | first }}</span>
                {% endif %}
            </div>
            <div class="form-group {{ errors.password_login ? 'has-error' : '' }}">
                <label for="exampleInputPassword1">Şifre</label>
                <input type="password" name="password_login" class="form-control" id="exampleInputPassword1" placeholder="Password">
                {% if errors.password_login %}
                    <span class="help-block">{{ errors.password_login | first }}</span>
                {% endif %}
            </div>
            <button type="submit" class="btn btn-warning btn-block">Giriş Yap</button>
            {{csrf.field | raw }}
        </form>
    </div>
{% endblock %}